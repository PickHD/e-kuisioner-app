<div class="row" id="register-section">
  <h1>Registrasi Akun</h1>
  <div class="register-form">
    <form action="/auth/register" method="POST" autocomplete="on">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="first_name">Nama Pertama</label>
          <input type="name" placeholder="Masukan Nama Pertama" class="form-control form-control-sm" minlength="5"
            name="first_name" required />
        </div>
        <div class="form-group col-md-6">
          <label for="last_name">Nama Akhir</label>
          <input type="name" placeholder="Masukan Nama Akhir" class="form-control form-control-sm" minlength="5"
            name="last_name" required>
        </div>
        <div class="form-group col-md-6">
          <label for="email">Alamat Email</label>
          <input type="email" inputmode="email" placeholder="Masukan Email" autocomplete="email"
            class="form-control form-control-sm " name="email" required>
        </div>
        <div class="form-group col-md-6">
          <label for="no_telp">No Telp</label>
          <input type="tel" class="form-control form-control-sm" name="phone" placeholder="08xxxxxxxxxx" minlength="12"
            pattern="^\d{12}$" required>
        </div>
        <div class="form-group col-md-6">
          <label for="religion">Agama</label>
          <select name="religion" class="form-control form-control-sm">
            <option>--Pilih Salah Satu Yang Merupakan Agama Anda--</option>
            <% listReligion.forEach(r => { %>
            <option><%= r %> </option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-md-6">
          <label for="gender">Jenis Kelamin</label>
          <select name="gender" class="form-control form-control-sm">
            <option>--Jenis Kelamin Anda--</option>
            <% listGender.forEach(g => { %>
            <option><%= g %> </option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-md-12">
          <label for="district">Kecamatan</label>
          <select name="district" class="form-control form-control-sm">
            <option>--Pilih Salah Satu Kecamatan--</option>
            <% listDistrict.forEach(d => { %>
            <option><%= d %> </option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-md-12">
          <label for="address">Alamat Rumah</label>
          <textarea name="address" class="form-control" rows="3" cols="70" minlength="30"
            placeholder="Alamat Rumah Lengkap" required></textarea>
        </div>
        <div class="form-group col-md-12">
          <label for="password">Kata Sandi</label>
          <input type="password" class="form-control form-control-sm" id="pass1" name="pass1"
            placeholder="Masukan Kata Sandi" minlength="8" autocomplete="new-password" required><i
            class="fas fa-eye btn-show-hide-pwd" data-for="pass1"></i>
        </div>
        <div class="form-group col-md-12">
          <label for="password">Konfirmasi Kata Sandi</label>
          <input type="password" class="form-control form-control-sm" id="pass2" name="pass2"
            placeholder="Konfirmasi Kata Sandi" autocomplete="current-password" required><i
            class="fas fa-eye btn-show-hide-pwd" data-for="pass2"></i>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Lanjutkan</button>
      <button type="button" class="btn btn-secondary"><a href="/">Kembali</a></button>
    </form>
  </div>
</div>